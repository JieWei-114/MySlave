# Copy this file to .env and fill in your actual API keys

# DATABASE SETTINGS
MONGO_URI=mongodb://127.0.0.1:27017
DB_NAME=myslave

# LLM SETTINGS (Ollama)
OLLAMA_URL=http://localhost:11434

# Comma-separated list of allowed origins
CORS_ORIGINS=["http://localhost:4200","http://localhost:4000","http://localhost:4173"]

# SearXNG - Self-hosted metasearch engine
SEARXNG_URL=http://localhost:8080

# Serper (Google Search API - PAID, requires API key)
# Get your key at: https://serper.dev
SERPER_URL=https://google.serper.dev/search
SERPER_API_KEY=Set_your_key_here
SERPER_TOTAL_LIMIT=2500

# Tavily (Research API - PAID, requires API key)
# Get your key at: https://tavily.com
TAVILY_URL=https://api.tavily.com/search
TAVILY_API_KEY=Set_your_key_here
TAVILY_MONTHLY_LIMIT=1000
